<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".merchant.views.SaleCompleteFragment">

    <fragment
            android:layout_height="match_parent"
            android:name="org.lifetowncolumbus.pos.merchant.views.ItemizedSaleFragment"
            android:id="@+id/ItemizedSaleFragment" android:layout_weight="1"
            android:layout_width="0dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="2">

        <TextView
                android:text="@string/sale_complete_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/saleCompleteLabel" android:textSize="36sp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <Button
                android:text="@string/new_sale_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/newSaleButton" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/saleCompleteLabel"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>