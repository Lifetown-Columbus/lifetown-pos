<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".checkout.PayCashFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="@string/calculate_change"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:id="@+id/calculateChangeButton"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.3"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/amountTendered"
                app:layout_constraintBaseline_toBaselineOf="@+id/calculateChangeButton"
                app:layout_constraintEnd_toStartOf="@+id/calculateChangeButton" android:layout_marginEnd="16dp"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>